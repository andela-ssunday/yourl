<div clas="container-fluid">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Login</a></li>
          <li><a href="#">Signup</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="main">
    <h1 class="center header">YouRL</h1>
    <div class="row">
      <div class="col-md-5 shrink form-inline" >
          <%= form_for Link.new do |f| %>
          <div class="form-group">
            <%= f.text_field :long_url, class: "form-control our-form-control", id: "exampleInputEmail1",placeholder: "Enter long url"%>
          </div>
          <%= f.submit class: "btn btn-primary"%>
          <% end %>

          <% unless flash[:short_url].nil? %>
            <div class="short_url">
              <%= gethost+flash[:short_url] %>
            </div>
          <% end %>
      </div
    </div>
  </div>
</div>
