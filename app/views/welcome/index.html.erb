<div clas="container-fluid">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login <span class="caret"></span></a>
            <ul class="dropdown-menu user-form">
              <form action="/users/sign_in" accept-charset="UTF-8" method="post">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" name="user[email]" id="user_email" placeholder="Email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" name="user[password]" id="user_password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="<%= sign_up_path %>">Signup</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>



  <div class="container">
    <h1 class="center header">YouRL</h1>
    <div class="row">
      <div class="col-md-5 shrink form-inline" >
          <%= form_for(Link.new, remote: :true) do |f| %>
          <div class="input-group">
            <%= f.text_field :long_url, class: "form-control our-form-control", id: "exampleInputEmail1",placeholder: "Enter long url", required: :true%>
            <span class="input-group-btn">
              <!-- <button class="btn btn-primary" type="button">Create Link</button> -->
              <%= f.submit class: "btn btn-primary"%>
            </span>
          </div>
          <% end %>
          <div id="loader">
            <div id="loader2">
              <% unless flash[:short_url].nil? %>
                <input type="text" disabled="disabled" class="short_url" value=<%= gethost+flash[:short_url] %> >
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
